@using Parking_App.Entities
@model IEnumerable<VehiculosViewModel>
@{
	ViewBag.Title = "Vehiculos";
}

<h1>Vehiculos registrados</h1>

<div class="constainer">
	<a class="btn btn-primary" asp-action="Registrar">Agregar vehiculo</a>
	@if (Model.Count() == 0)
	{
		<h5 class="mt-2">No hay vehiculos registrados</h5>
	}else{

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Placa</th>
				<th>Tipo de vehiculo</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var vehiculo in Model)
			{
				<tr>
					<td>@vehiculo.Placa</td>
					<td>@vehiculo.TipoVehiculo</td>
					<td>
						<a asp-action="Editar" asp-route-id="@vehiculo.Id" class="btn btn-primary">Editar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	}
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}